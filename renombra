SAVEIFS=$IFS
IFS=$(echo -en "\n\b")

#if [[ $3 == 't' ]]
#then
#        mod= "-t -r"
#else
#        mod= " "
#fi

if [[ $1 == "" || $2 == "" ]]
then
        echo "Renombra por lotes"
        echo "uso: $0 NOMBRE EXTENSION"
        echo "NOMBRE: EL Nombre que se quiere usar (NOMBRE1.jpg NOMBRE2.jpg...)"
        echo "EXTENSION: La extensi√≥n a la que se quiere renombrar"
else
        i=1
        

        for fichero in $( ls ${mod} *.${2})

        do
 		numero=$(printf "%03d" $i)

                mv ${fichero} ${1}${numero}.${2}
                let i++
        done
fi

IFS=$SAVEIFS

